<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__principal__fornecedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="45dp"
    tools:context="com.unibratec.laisvidoto.application_teste_telas.Activity_Principal_Fornecedor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:onClick="config_fornecedor"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            card_view:contentPadding="10dp"
            card_view:cardBackgroundColor="#FF8C00"
            card_view:cardCornerRadius="4dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/configuracao"
                />

            <TextView
                android:elevation="2dp"
                android:id="@+id/info_text"
                android:textAlignment="center"
                android:textColor="#222"
                android:text="@string/configuracao"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
             </TextView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:onClick="servico_fornecedor"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            card_view:cardBackgroundColor="#B03060"
            card_view:cardCornerRadius="4dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/servico"
                />

            <TextView
                android:elevation="2dp"
                android:id="@+id/info_text2"
                android:textAlignment="center"
                android:textColor="#222"
                android:text="@string/servico"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:onClick="oferta_fornecedor"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_margin="5dp"
            android:layout_height="200dp"
            card_view:cardBackgroundColor="#00CD66"
            card_view:cardCornerRadius="4dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/megaphone"
                />

            <TextView
                android:elevation="2dp"
                android:id="@+id/info_text3"
                android:textAlignment="center"
                android:textColor="#222"
                android:text="@string/oferta"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:onClick="agendamento_fornecedor"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            card_view:cardBackgroundColor="#FFD700"
            card_view:cardCornerRadius="4dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calendar_icon"
                />

            <TextView
                android:elevation="2dp"
                android:id="@+id/info_text4"
                android:textAlignment="center"
                android:textColor="#222"
                android:text="@string/agendamento"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
