<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_configuracao_fornecedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context="com.unibratec.laisvidoto.application_teste_telas.Activity_configuracao_fornecedor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.00">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/configuracao"
            />

        <TextView
            android:id="@+id/info_text"
            android:text="Configuração"
            android:textColor="#222"
            android:layout_width="152dp"
            android:layout_height="47dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:textSize="20sp"
            android:elevation="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:weightSum="1" >

        <TextView
            android:id="@+id/info_text2"
            android:textAlignment="gravity"
            android:textColor="#222"
            android:text="@string/nome"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="95dp"
            android:layout_height="43dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Laís Vidoto"
            android:ems="10"
            android:id="@+id/editText2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/info_text3"
            android:textAlignment="gravity"
            android:textColor="#222"
            android:text="@string/endereco"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="95dp"
            android:layout_height="43dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Rua da Soledade"
            android:ems="10"
            android:id="@+id/editText3" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/info_text4"
            android:textAlignment="gravity"
            android:textColor="#222"
            android:text="@string/cnpj"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="97dp"
            android:layout_height="43dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="65.845.013/0001-07"
            android:ems="10"
            android:id="@+id/editText4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <Button
            android:id="@+id/button1"
            android:text="@string/atualizar"
            android:layout_gravity="left"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:background="#8B658B"
            android:layout_marginEnd="10dp"
            android:layout_weight="1.05" />


    </LinearLayout>
</LinearLayout>