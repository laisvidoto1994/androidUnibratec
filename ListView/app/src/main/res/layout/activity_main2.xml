<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/stars"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222"
        android:elevation="2dp"
        android:fontFamily="serif-monospace"
        android:text="nome"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!-- icon -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        app:cardElevation="10dp"
        android:id="@+id/card_view1"
        android:layout_width="411dp"
        android:layout_height="175dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:background="@drawable/The_green_flame_by_diablodeath"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="378dp"
            android:layout_height="149dp"
            android:src="@drawable/aatrox" />

    </android.support.v7.widget.CardView>

    <!-- title (como ela é chamada)-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="4dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_name9"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:background="#222"
                android:elevation="2dp"
                android:text="Title:"
                android:fontFamily="monospace"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:background="#222"
                android:elevation="2dp"
                android:fontFamily="serif"
                android:text="The Darkin Blade"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- tags (posição dele no jogo)-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="4dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_name3"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:background="#222"
                android:elevation="2dp"
                android:fontFamily="monospace"
                android:text="Tags:"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_tags"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:background="#222"
                android:elevation="2dp"
                android:fontFamily="serif"
                android:text="Fighter,Tank"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- hp (vida) e mp (ataque ou mana)-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- hp (vida)-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="4dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_name4"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:background="#222"
                    android:elevation="2dp"
                    android:fontFamily="monospace"
                    android:text="Hp:"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_hp"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:background="#222"
                    android:elevation="2dp"
                    android:fontFamily="serif"
                    android:text="580"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="italic" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- mp (ataque ou mana)-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view5"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="4dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_name5"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:background="#222"
                    android:elevation="2dp"
                    android:fontFamily="monospace"
                    android:text="mp:"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_mp"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:background="#222"
                    android:elevation="2dp"
                    android:fontFamily="serif"
                    android:text="100"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="italic" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <!-- description -->
    <android.support.v7.widget.CardView

        android:id="@+id/card_view6"
        android:layout_width="386dp"
        android:layout_height="245dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/transparent"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name7"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:background="#222"
                android:elevation="2dp"
                android:fontFamily="monospace"
                android:text="Description:"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:cardCornerRadius="10dp"
                android:id="@+id/textView_description"
                android:layout_width="393dp"
                android:layout_height="201dp"
                android:background="#222"
                android:elevation="2dp"
                android:fontFamily="serif"
                android:text="One of the ancient darkin, Aatrox was once a peerless swordmaster who reveled in the bloody chaos of the battlefield. Trapped within his own blade by the magic of his foes, he waited out the millennia for a suitable host to wield him—this mortal warrior..."
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>