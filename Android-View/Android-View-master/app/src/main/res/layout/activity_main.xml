<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.unibratec.laisvidoto.applicationview.MainActivity">

    <android.support.v7.widget.CardView  android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:foregroundGravity="center"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginTop="15dp"
                                        android:layout_alignStart="@+id/linearLayout">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:background="@color/cardview_dark_background"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:id="@+id/textView_Nome"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox"
        android:layout_alignParentStart="true" >

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accont"
            android:background="@color/cardview_dark_background"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:id="@+id/textView_Nome"
            />

    </android.support.v7.widget.CardView>

    <Button
        android:text="Unlink Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/cardView2"
        android:layout_alignStart="@+id/linearLayout2"
        android:id="@+id/button2" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="69dp"
        android:layout_above="@+id/checkBox"
        android:layout_alignParentStart="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/checkBox2"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="2dp"
        android:id="@+id/imageView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textSize="30dp"
            android:id="@+id/textView_Nome"
            />

        <TextView android:id="@+id/textView_Telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descriÃ§ao"
            android:textSize="20dp"
            />

    </LinearLayout>

</LinearLayout>

    <CheckBox
        android:text="Subject Field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/switch1"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Private Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_above="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <Switch
        android:text="Account Active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
