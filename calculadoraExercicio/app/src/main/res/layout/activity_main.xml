<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.laisvidoto.calculadoraexercicio.MainActivity">

    <EditText
        android:gravity="right"
        android:paddingTop="40dp"
        android:paddingRight="5dp"
        android:background="#000000"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    /*  c +/-  %  /*/
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#696969"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/buttonC"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:text="C" />

        <Button
            android:id="@+id/buttonMaisMenos"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/buttonC"
            android:layout_toStartOf="@+id/buttonPorcentagem"
            android:background="#696969"
            android:text="+/-"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:background="#696969"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/buttonPorcentagem"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/buttonDivisao"
            android:text="%" />

        <Button
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#FFA500"
            android:id="@+id/buttonDivisao"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="/" />

    </RelativeLayout>

    /* 7 8 9 X */
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#BEBEBE"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/button7"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button7"
            android:layout_toStartOf="@+id/button9"
            android:background="#BEBEBE"
            android:text="8"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:background="#BEBEBE"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/button9"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/buttonMultiplicacao"
            android:text="9" />

        <Button
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#FFA500"
            android:id="@+id/buttonMultiplicacao"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="x" />

    </RelativeLayout>

    /* 4 5 6 - */
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#BEBEBE"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/button4"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button4"
            android:layout_toStartOf="@+id/button6"
            android:background="#BEBEBE"
            android:text="5"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/buttonMenos"
            android:background="#BEBEBE"
            android:text="6"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#FFA500"
            android:id="@+id/buttonMenos"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="-" />

    </RelativeLayout>

    /* 1 2 3 + */
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#BEBEBE"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/button1"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button1"
            android:layout_toStartOf="@+id/button3"
            android:background="#BEBEBE"
            android:text="2"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/buttonMais"
            android:background="#BEBEBE"
            android:text="3"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#FFA500"
            android:id="@+id/buttonMais"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="+" />

    </RelativeLayout>

    /* 0 ,  = */
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button0"
            android:layout_width="185dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/buttonVirgula"
            android:background="#BEBEBE"
            android:text="0"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:background="#BEBEBE"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/buttonVirgula"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/buttonIgual"
            android:text="," />

        <Button
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#FFA500"
            android:id="@+id/buttonIgual"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="=" />

    </RelativeLayout>

</LinearLayout>
